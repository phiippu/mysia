<p id="notice"><%= notice %></p>

<h1>Listing Gardes</h1>

<table>
  <thead>
    <tr>
      <th>Notenplan</th>
      <th>Subject</th>
      <th>Garde</th>
      <th>Weighting</th>
      <th>Shorttest</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gardes.each do |garde| %>
      <tr>
        <td><%= garde.notenplan %></td>
        <td><%= garde.subject %></td>
        <td><%= garde.garde %></td>
        <td><%= garde.weighting %></td>
        <td><%= garde.shorttest %></td>
        <td><%= link_to 'Show', garde %></td>
        <td><%= link_to 'Edit', edit_garde_path(garde) %></td>
        <td><%= link_to 'Destroy', garde, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

