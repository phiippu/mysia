<p id="notice"><%= notice %></p>

<h1>Listing Subjects</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.name %></td>
        <td><%= subject.number %></td>
        <td><%= link_to 'Show', subject %></td>
        <td><%= link_to 'Bearbeiten', edit_subject_path(subject) %></td>
        <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Sind sie sicher?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

