<p id="notice"><%= notice %></p>

<h1>Fächer</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.name %></td>
        <td><%= link_to 'Anzeigen', subject, class: 'btn btn-default' %></td>
        <td><%= link_to 'Bearbeiten', edit_subject_path(subject), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Löschen', subject, method: :delete, data: { confirm: 'Sind sie sicher?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Neues Fach', new_subject_path, class: 'btn btn-primary' %>
